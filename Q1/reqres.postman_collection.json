			"name": "List Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//parse json response data",
							"var jsonData = JSON.parse(responseBody);",
							"",
							"//verify status code is 200",
							"pm.test(\"Get list user response success\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"//verify e-mail : lindsay.ferguson@reqres.in",
							"pm.test(\"Response contains : lindsay.ferguson@reqres.in\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"lindsay.ferguson@reqres.in\");",
							"});",
							"",
							"//search e-mail : lindsay.ferguson@reqres.in",
							"pm.test(\"Search e-mail : lindsay.ferguson@reqres.in\", function (){",
							"    for(i=0;i<jsonData.data.length;i++){",
							"        if(jsonData.data[i].email == 'lindsay.ferguson@reqres.in'){",
							"            pm.globals.set(\"returned_email\", jsonData.data[i].email);",
							"        }",
							"    }",
							"})",
							"",
							"//compare returned (response) and expected",
							"pm.test(\"Compare returned and expected\", function (){",
							"    var expected_email = \"lindsay.ferguson@reqres.in\";",
							"    var returned_email = pm.globals.get(\"returned_email\");",
							"    pm.expect(returned_email).to.eql(expected_email);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
